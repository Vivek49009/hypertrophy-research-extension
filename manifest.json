{
  "manifest_version": 3,
  "name": "Hypertrophy Research Tracker",
  "description": "A Chrome extension to collect and organise hypertrophy-related medical research.",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://eutils.ncbi.nlm.nih.gov/*"]
}
